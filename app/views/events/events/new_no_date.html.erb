<%= provide(:title, "Create An Event") %>

<%= form_for(@event, url: events_path) do |f| %>

  <div class="field">
    <%= f.label :month %>
    <%= f.select :month, options_for_select(month_select)%>
    <%= f.label :day %>
    <%= f.select :day, options_for_select(day_select)%>
    <%= f.label :year %>
    <%= f.select :year, options_for_select(year_select)%>
  </div>

  <div class="hidden">
    <%= f.label :city_id %>
    <%= f.text_field :city_id, :value => params[:city_id] %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "text-field" %>
  </div>

  <%= f.submit "Create event", data: { disable_with: 'Creating...' }, class: "submit-button" %>
  <% end %>