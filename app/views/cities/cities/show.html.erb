            <%= link_to(city_path(@city)) do %>
              <img class="thumbnail-image" srcset="https://inhabitat.com/wp-content/blogs.dir/1/files/2015/10/Joshua-Trees-in-Desert.jpg" width="100%" height="auto" />
            <% end %>
          </div>
          <div class="fifty">
