<%= provide(:title, "Create A City") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">


      <div class="title">
        Create a city
      </div>

      <div class="padding-top">
        <%= form_for(@city, url: cities_path) do |f| %>

          <div class="field">
            <%= f.label :city %>
            <%= f.text_field :city, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :state %>
            <%= f.text_field :state, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :country %>
            <%= f.text_field :country, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image %>
            <%= f.text_field :image, class: "text-field" %>
          </div>

          <%= f.submit "Create city", data: { disable_with: 'Creating...' }, class: "submit-button" %>
        <% end %>
      </div>


    </div>
  </div>
</div>