<% content_for :city_og_header do %>
  <meta property="og:url" content="<%= city_url(@city) %>" />
  <meta property="og:title" content="<%= @city.city %>" />
  <meta property="og:description" content="<%= truncate(@city.description, length: 140) %>" />
  <meta property="og:image" content="<%= @city.image %>" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= @city.city %>" />
  <meta name="twitter:description" content="<%= truncate(@city.description, length: 140) %>" />
  <meta name="twitter:image" content="<%= @city.image %>" />
  <meta name="twitter:url" content="<%= city_url(@city) %>" />
  <meta name="twitter:site" content="@sunburstpeak" />
  <meta name="twitter:creator" content="<%= @sunburstpeak %>" />
<% end %>