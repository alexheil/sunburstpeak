<% content_for :thing_og_header do %>
  <meta property="og:url" content="<%= city_thing_url(@city, @thing) %>" />
  <meta property="og:title" content="<%= @thing.title %>" />
  <meta property="og:description" content="<%= truncate(@thing.description, length: 140) %>" />
  <meta property="og:image" content="<%= @thing.image %>" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= @thing.title %>" />
  <meta name="twitter:description" content="<%= truncate(@thing.description, length: 140) %>" />
  <meta name="twitter:image" content="<%= @thing.image %>" />
  <meta name="twitter:url" content="<%= city_thing_url(@city, @thing) %>" />
  <meta name="twitter:site" content="@sunburstpeak" />
  <meta name="twitter:creator" content="<%= @sunburstpeak %>" />
<% end %>