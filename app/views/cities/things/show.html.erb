<%= provide(:title, sanitize(@thing.title)) %>
<%= render 'cities/partials/things_twitter_cards' %>

<div class="wrapper">
  <div class="container">

    <div class="padding-vertical border-bottom">
      <div class="padding-bottom title">
        <%= @thing.title %>
      </div>

      <div class="flex">
        <div class="seventy">

          <% if user_signed_in? && current_user == @owner %>
            <div class="flex">
              <div class="two-column">
                <%= link_to(edit_city_thing_path(@city, @thing)) do %>
                  <div class="margin-bottom-mini black-button">
                    Edit
                  </div>
                <% end %>
              </div>
              <div class="two-column">
                <%= link_to(city_thing_path(@city, @thing), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete) do %>
                  <div class="margin-bottom-mini delete-button">
                    Delete
                  </div>
                <% end %>
                <span class="hard-text"></span>
              </div>
            </div>
          <% end %>

          <img class="profile-image" src="<%= @thing.image %>">
        </div>

        <div class="thirty">

          <% if user_signed_in? && current_user.liked?(@thing) %>
            <div class="padding-bottom-mini">
              <%= link_to "Unlike", city_thing_like_path(@city, @thing, current_user.like_id(@thing)), method: :delete, class: "submit-button" %>
            </div>
          <% elsif user_signed_in? %>
            <div class="padding-bottom-mini">
              <%= link_to "Like", city_thing_likes_path(@city, @thing), :method => :post, class: "submit-button" %>
            </div>
          <% else %>
            <%= link_to(sign_in_path) do %>
              <div class="submit-button margin-bottom-mini">
                Like
              </div>
            <% end %>
          <% end %>


          <div class="flex padding-bottom-mini">
            <div class="two-column">
              <div class="padding-bottom-mini">
                <a onclick="javascript:window.open('https://www.facebook.com/sharer/sharer.php?u=<%= city_thing_url(@city, @thing) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)" class="facebook-button">F</a>
              </div>
            </div>
            <div class="two-column">
              <div class="padding-bottom-mini">
                <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @thing.title %> - &amp;url=<%= city_event_url(@city, @thing) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)" class="twitter-button">T</a>
              </div>
            </div>
          </div>
          

          <div class="padding-bottom-mini">
            <span class="uppercase letter-spacing">Likes:</span> <%= @thing.likes.count %>
          </div>
          <div class="padding-bottom-mini">
            <span class="uppercase letter-spacing">City:</span> <%= link_to @thing.city.city, city_path(@city) %>
          </div>
          <div class="padding-bottom-mini">
            <span class="uppercase letter-spacing">State:</span> <%= @thing.city.state %>
          </div>
          <div class="padding-bottom-mini">
            <span class="uppercase letter-spacing">Country:</span> <%= @thing.city.country %>
          </div>
          <div class="padding-bottom-mini">
            <span class="uppercase letter-spacing">Venue:</span> <%= @thing.venue %>
          </div>
          <div class="padding-bottom-mini">
            <span class="uppercase letter-spacing">Address:</span> <%= @thing.address %>
          </div>
        </div>

      </div>
    </div>

    <%= render 'partials/ad_trash' %>

    <div class="padding-vertical">
      <div class="flex">
        <div class="two-column">
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              Description
            </div>
              <%= @thing.description %>
          </div>
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              What to wear
            </div>
              <%= @thing.what_to_wear %>
          </div>
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              What to bring
            </div>
              <%= @thing.what_to_bring %>
          </div>
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              Where to park
            </div>
              <%= @thing.where_to_park %>
          </div>
        </div>
        <div class="two-column">
          <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@thing.latitude},#{@thing.longitude}&markers=#{@thing.latitude},#{@thing.longitude}&zoom=15&size=640x400&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8" %>
        </div>
      </div>
    </div>


  </div>
</div>