<%= provide(:title, sanitize(@thing.title)) %>


<div class="wrapper">
  <div class="container">

    <div class="padding-vertical border-bottom">
      <div class="padding-bottom title">
        <%= @thing.title %>
      </div>

      <div class="flex">
        <div class="two-column">
          <img class="profile-image" src="<%= @thing.image %>">
        </div>

        <div class="two-column">

          <div class="two-column">
            <% if user_signed_in? && current_user.liked?(@thing) %>
              <div class="padding-bottom-mini">
                <%= link_to "Delete RSVP", city_event_like_path(@city, @thing, current_user.like_id(@thing)), method: :delete, class: "submit-button" %>
              </div>
            <% elsif user_signed_in? %>
              <div class="padding-bottom-mini">
                <%= link_to "Like", city_event_likes_path(@city, @thing), :method => :post, class: "submit-button" %>
              </div>
            <% else %>
              <%= link_to(sign_in_path) do %>
                <div class="submit-button margin-bottom-mini">
                  RSVP
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="sixteen">
            <div class="padding-bottom-mini facebook-button">
              F
            </div>
          </div>
          <div class="sixteen">
            <div class="padding-bottom-mini twitter-button">
              T
            </div>
          </div>
          <div class="sixteen">
            <div class="padding-bottom-mini reddit-button">
              R
            </div>
          </div>

          <div class="padding-bottom-mini">
            <span class="bold">City:</span> <%= link_to @thing.city.city, city_path(@city) %>
          </div>
          <div class="padding-bottom-mini">
            <span class="bold">State:</span> <%= @thing.city.state %>
          </div>
          <div class="padding-bottom-mini">
            <span class="bold">Country:</span> <%= @thing.city.country %>
          </div>
          <div class="padding-bottom-mini">
            <span class="bold">Venue:</span> <%= @thing.venue %>
          </div>
          <div class="padding-bottom-mini">
            <span class="bold">Address:</span> <%= @thing.address %>
          </div>
        </div>

      </div>
    </div>

    <div class="padding-bottom-mini padding-top-mini border-bottom">
      <div class="black-box">
        hey
      </div>
    </div>

    <div class="padding-vertical">
      <div class="flex">
        <div class="two-column">
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              Description
            </div>
              <%= @thing.description %>
          </div>
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              What to wear
            </div>
              <%= @thing.what_to_wear %>
          </div>
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              What to bring
            </div>
              <%= @thing.what_to_bring %>
          </div>
          <div class="padding-bottom">
            <div class="uppercase letter-spacing">
              Where to park
            </div>
              <%= @thing.where_to_park %>
          </div>
        </div>
        <div class="two-column">
          <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@thing.latitude},#{@thing.longitude}&markers=#{@thing.latitude},#{@thing.longitude}&zoom=15&size=640x400&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8" %>
        </div>
      </div>
    </div>


  </div>
</div>