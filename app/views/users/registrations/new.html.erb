<%= provide(:title, "Register") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">


      <div class="padding-bottom title">
        Register
      </div>

      <div class="padding-top">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :password %> <span class="dark small-text"><%= @minimum_password_length.to_s + " characters minimum" if @minimum_password_length %></span>
            <%= f.password_field :password, autocomplete: "off", class: "text-field" %>
          </div>

          <div class="padding-bottom">
            <%= f.submit "Register", class: "submit-button" %>
          </div>
        <% end %>
      </div>

      <div>
        <%= link_to "But I already have an account.", sign_in_path %>
      </div>

    </div>
  </div>
</div>