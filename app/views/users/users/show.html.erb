<div class="wrapper">
  <div class="container">
    <div class="padding-vertical">

      <div>
        <%= @user.username %>
      </div>

<%= link_to 'DAY', day_user_path(current_user)  %>

<%= link_to 'WEEK', week_user_path(current_user)  %>

<%= link_to 'MONTH', month_user_path(current_user)  %>

<%= month_calendar events: (@events) do |day, events| %>    
  <%= content_tag :div, class: "calendar-day", data: {date: day} do %>      
    <%= day %>
    <% if events.any? %>
      <div class="events">
        <%= pluralize(events.count, "Event") %>
      </div>
    <% end %>
  <% end %>  
<% end %>

</div>
</div>
</div>